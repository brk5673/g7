{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],     // Resolución de módulos compatible con Node.js
  },
  "include": ["**/*.ts", "ai.ts"],            // Incluye todos los archivos .ts en el proyecto
  "exclude": ["node_modules"]        // Excluye la carpeta node_modules
}