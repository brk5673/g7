{
  "compilerOptions": {
    "target": "ES6",                 // Transpila a ES6
    "module": "CommonJS",            // Usa el sistema de módulos CommonJS
    "outDir": "./dist",              // Salida de archivos compilados
    "strict": true,                  // Activa comprobaciones estrictas
    "esModuleInterop": true,         // Interoperabilidad con módulos ES
    "skipLibCheck": true,            // Omite la comprobación de tipos de las librerías
    "moduleResolution": "node"       // Resolución de módulos compatible con Node.js
  },
  "include": ["**/*.ts"],            // Incluye todos los archivos .ts en el proyecto
  "exclude": ["node_modules"]        // Excluye la carpeta node_modules
}